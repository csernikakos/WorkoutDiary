@model WorkoutDiary.ViewModels.WorkoutTypeViewModel
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>


@using (Html.BeginForm("Save", "WorkoutTypes"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well bs-component" style="width: 31%; margin-right: 15px">
        <div style="margin-left: 15px">
            <div class="form-group">
                @Html.LabelFor(m => m.WorkoutType.Name)
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fas fa-running"></i>
                    </div>
                    @Html.TextBoxFor(m => m.WorkoutType.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.ActionLink("Back to List", "Index", "WorkoutTypes", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Save" class="btn btn-primary" style="float: right; margin-right: 11px" />
                </div>
            </div>
        </div>

    </div>
    @Html.HiddenFor(w => w.WorkoutType.Id)
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
