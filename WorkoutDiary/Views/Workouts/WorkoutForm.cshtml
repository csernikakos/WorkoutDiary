@model WorkoutDiary.ViewModels.WorkoutViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@*@using (Html.BeginForm("Save","Workouts"))*@
@using (Html.BeginForm("Save", "Workouts"))
{
    @Html.ValidationSummary(true, "Please fix the following errors:")
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Workout</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(m => m.Workout.WorkoutTypeId)
            @Html.DropDownListFor(m => m.Workout.WorkoutTypeId, new SelectList(Model.WorkoutTypes, "Id", "Name"), "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Workout.WorkoutTypeId)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Workout.Date)
            @Html.TextBoxFor(m => m.Workout.Date, "{0:yyyy MMM d}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Workout.Date)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
